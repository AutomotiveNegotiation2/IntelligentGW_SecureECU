##############################################################
# This makefile builds the import tool as a standalone
# executable, using the TIDL import API and shared
# library. 
##############################################################
ALGBASE_PATH ?= $(abspath ../../../)
include $(ALGBASE_PATH)/makerules/config.mk

COMMON_DIR= ../../../common
CFILES := $(COMMON_DIR)/configparser.c

CFILES += tidl_import_main.cpp
CFILES += tidl_import_config.cpp
HFILES += ti_dl.h

TARGET_PLATFORM = PC
BUILD_WITH_CUDA = 0

ifdef SystemRoot
CFILES += $(COMMON_DIR)/getopt/getopt.c
CFILES += $(COMMON_DIR)/asprintf/asprintf.c
endif

OUTFILE= ./out/tidl_model_import.out
##############################################################

include $(ALGBASE_PATH)/makerules/rules.mk

#used inside makerules, but okay to define it afterwards
CFLAGS += -I ../../inc
CFLAGS += -I $(COMMON_DIR)
CFLAGS += -I .

#CFLAGS+= /D_MSC_VER=1700 /Gd
ifdef SystemRoot
CFLAGS+= -I $(COMMON_DIR)/getopt
CFLAGS+= -I $(COMMON_DIR)/asprintf
CFLAGS += /DTIDL_IMPORT_TOOL
else
CFLAGS += -D_GNU_SOURCE
CFLAGS += -DTIDL_IMPORT_TOOL -w
endif

##############################################################

##############################################################
# Link against the import shared library.
ifdef SystemRoot
LDFLAGS +=-l .\out\tidl_model_import.lib
else
# The -rpath option tells the loader to look in the same directory
# as the executable when the tool runs (avoids the need for
# LD_LIBRARY_PATH)
LDFLAGS +=-L ./out
LDFLAGS +=-l :tidl_model_import.so
LDFLAGS +=-Wl,-rpath -Wl,\$$ORIGIN
LDFLAGS +=-pthread -Wl,--no-as-needed
endif
##############################################################


##############################################################
OUTDIR =  "./out"

$(OUTFILE) : outfile
##############################################################
